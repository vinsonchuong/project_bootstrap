source 'https://rubygems.org'

ruby '2.2.2'

gem 'rails', '~> 4.2.0'
gem 'responders'

gem 'puma'
gem 'pg'

gem 'uglifier'
gem 'handlebars_assets'
gem 'jquery-rails'
gem 'lodash-rails'

gem 'sass-rails'

group :development do
  gem 'spring'
  gem 'spring-watcher-listen'
  gem 'wdm' if Gem.win_platform?
  gem 'spring-commands-rspec'

  gem 'heroku_san'
  gem 'travis'
end

group :development, :test do
  gem 'pry-rails'
  gem 'pry-byebug'
  gem 'web-console'

  gem 'rspec-rails'

  gem 'jasmine-rails'
  gem 'sinon-rails'
  gem 'jasmine-jquery-rails'
end

group :test do
  gem 'capybara'
  gem 'poltergeist'
  gem 'selenium-webdriver'
  gem 'launchy'
  gem 'database_cleaner'
end
